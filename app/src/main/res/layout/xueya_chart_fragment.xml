<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/xueya_chart_view"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <RelativeLayout
            android:id="@+id/xueya_chart_rl"
            android:layout_width="260dp"
            android:layout_height="fill_parent"
            android:background="@drawable/duihuakuang_right"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/xueya_chart_suggestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxEms="14"
                android:maxLines="3"
                android:textColor="#fff"
                android:textSize="@dimen/txt18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:background="@drawable/doctor_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_wenbenkuang_bg"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/xueya_chart_fragment_gjbzdzb"
            android:textColor="#fff"
            android:textSize="@dimen/txt22sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/xueya_gaoya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/color_img"
                android:text="@string/xueya_chart_fragment_gy"
                android:textColor="#fff"
                android:textSize="@dimen/txt12sp" />

            <ImageView
                android:id="@+id/color_img"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_below="@id/xueya_gaoya"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/xueya_colour720" />

            <ImageView
                android:id="@+id/xueya_chart_right"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@id/color_img"
                android:layout_marginBottom="-6dp"
                android:background="@drawable/arrow_right" />

            <ImageView
                android:id="@+id/xueya_chart_bottom"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@id/color_img"
                android:layout_alignLeft="@id/color_img"
                android:layout_marginBottom="-12dp"
                android:layout_marginLeft="-6dp"
                android:background="@drawable/arrow_bottom" />

            <ImageView
                android:id="@+id/xueya_chart_center"
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@id/color_img"
                android:layout_alignLeft="@id/color_img"
                android:layout_marginLeft="-6dp"
                android:background="@drawable/zuobiao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/color_img"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/color_img"
                android:singleLine="true"
                android:text="@string/xueya_chart_fragment_dy"
                android:textColor="#fff"
                android:textSize="@dimen/txt12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>