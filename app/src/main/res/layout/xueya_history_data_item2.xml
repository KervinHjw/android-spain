<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xueya_history_data_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/xueya_data_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxEms="4"
        android:singleLine="false"
        android:text="@string/xueya_history_data_item2_date"
        android:textColor="#fff"
        android:textSize="@dimen/txt14sp" />

    <ImageView
        android:id="@+id/xueya_data_history_cycle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:background="@drawable/history_yuan" />

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/kuang" >

        <TextView
            android:id="@+id/xueya_history_data_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="130/70"
            android:textColor="#000"
            android:textSize="@dimen/txt30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/xueya_history_data_num"
            android:text="mmHg"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt16sp" />

        <TextView
            android:id="@+id/xueya_history_data_maibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="88"
            android:textColor="#FF8282"
            android:textSize="@dimen/txt26sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/xueya_history_data_maibo"
            android:background="@drawable/heart" />
    </RelativeLayout>

</RelativeLayout>