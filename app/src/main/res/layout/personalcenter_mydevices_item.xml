<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@drawable/personalcenter_layout_bg" >

    <ImageView
        android:id="@+id/personalcenter_mydevices_img"
        android:layout_width="3dip"
        android:layout_height="30dip"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/personalcenter_mydevices_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:text="LD001" />

    <Button
        android:id="@+id/personalcenter_mydevices_btn_delete"
        android:layout_width="65dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/button_red_bg"
        android:text="@string/time_item_delete"
        android:textColor="@color/white" />

</RelativeLayout>