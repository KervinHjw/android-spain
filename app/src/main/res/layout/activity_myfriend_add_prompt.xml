<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/common_titlte" />

        <ImageView
            android:id="@+id/myfriend_add_prompt_img"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:src="@drawable/myfriend_add_friend_success" />

        <TextView
            android:id="@+id/myfriend_add_prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/myfriend_add_prompt_addfriendsuccess"
            android:textColor="@color/gray"
            android:textSize="@dimen/txt14sp" />

        <Button
            android:id="@+id/myfriend_add_exit"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/button_bg"
            android:text="@string/myfriend_add_prompt_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/txt16sp" />
    </LinearLayout>

</RelativeLayout>