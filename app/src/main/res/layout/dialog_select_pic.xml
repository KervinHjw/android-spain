<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rectangle"
    android:orientation="vertical" >

    <Button
        android:id="@+id/dialog_sethead__camera"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@null"
        android:text="@string/dialog_select_pic_camera"
        android:textColor="@color/grey"
        android:textSize="@dimen/txt18sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:src="@color/grey" />

    <Button
        android:id="@+id/dialog_sethead_selectpic"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@null"
        android:text="@string/dialog_select_pic_album"
        android:textColor="@color/grey"
        android:textSize="@dimen/txt18sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:src="@color/grey" />

    <Button
        android:id="@+id/dialog_sethead_cancel"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@null"
        android:text="@string/dialog_select_pic_cancel"
        android:textColor="@color/grey"
        android:textSize="@dimen/txt18sp" />

</LinearLayout>