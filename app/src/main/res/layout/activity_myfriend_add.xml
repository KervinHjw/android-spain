<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <include layout="@layout/common_titlte" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/myfriend_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/myfriend_add_search"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:padding="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/myfriend_search" />

            <EditText
                android:id="@+id/myfriend_add_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:background="#fff"
                android:gravity="center_vertical"
                android:hint="@string/qingshurushoujihaochazhaohaoyou"
                android:textColorHint="#ccc"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="@dimen/txt16sp" />

            <Button
                android:id="@+id/add_disanfang"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:text="@string/myfriend_add_find"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myfriend_add_scanner"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/myfriend_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:padding="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/myfriend_scanner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginStart="10dip"
                android:text="@string/myfriend_add_scan"
                android:textColor="@color/black"
                android:textSize="@dimen/txt16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="10dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/common_icon_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/myfriend_add_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dip"
            android:divider="#EDEDED"
            android:dividerHeight="1dip"
            android:listSelector="#00000000" />
    </LinearLayout>

</RelativeLayout>