<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/home_left_menu_lv_item_left_img"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:src="#000fff" />

    <ImageView
        android:id="@+id/home_left_menu_lv_item_middle_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/home_left_menu_personalinfo" />

    <TextView
        android:id="@+id/home_left_menu_lv_item_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/home_left_menu_lv_item_personal_info"
        android:textSize="@dimen/txt22sp" />

</LinearLayout>