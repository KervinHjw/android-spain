<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.example.demo.view.PickerView
                android:id="@+id/year_pv"
                android:layout_width="60dp"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_year"
                android:textColor="#0096F2"
                android:textSize="@dimen/txt14sp" />

            <com.example.demo.view.PickerView
                android:id="@+id/month_pv"
                android:layout_width="30dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_month"
                android:textColor="#0096F2"
                android:textSize="@dimen/txt14sp" />

            <com.example.demo.view.PickerView
                android:id="@+id/day_pv"
                android:layout_width="30dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_date"
                android:textColor="#0096F2"
                android:textSize="@dimen/txt14sp" />

            <com.example.demo.view.PickerView
                android:id="@+id/hour_pv"
                android:layout_width="30dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/hour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_hour"
                android:textColor="#0096F2"
                android:textSize="@dimen/txt14sp" />

            <com.example.demo.view.PickerView
                android:id="@+id/minute_pv"
                android:layout_width="30dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dip" />

            <TextView
                android:id="@+id/minute_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_picker_minute"
                android:textColor="#0096F2"
                android:textSize="@dimen/txt14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="5dip"
            android:layout_height="58dip"
            android:layout_centerVertical="true"
            android:src="#00A1F4" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="50dip"
            android:src="#F8F8F8" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="110dip"
            android:src="#F8F8F8" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dip"
            android:src="#F8F8F8" />
    </RelativeLayout>

</LinearLayout>