<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/myfriend_item_list_item_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/myfriend_item_list_item_person"
        android:textColor="#555555"
        android:textSize="@dimen/txt14sp" />

    <TextView
        android:id="@+id/myfriend_item_list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:text="@string/messagecenter_messagelist_item_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt14sp" />

</LinearLayout>