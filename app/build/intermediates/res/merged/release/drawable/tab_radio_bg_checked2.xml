<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- tab 选中的背景颜色 -->


    <!-- 第一层   （ 下面的线） -->
    <item
        android:left="0dp"
        android:right="0dp">

        <!-- 左右margin -->
        <shape android:shape="rectangle" >
            <solid android:color="#00A1F4" />
        </shape>
    </item>

    <!-- 第二层    （  上面的 ） -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>