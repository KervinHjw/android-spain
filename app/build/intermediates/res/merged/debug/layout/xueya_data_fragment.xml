<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/xueya_data_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dayuan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xueya_data_xueya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/txt45sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xiegang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#fff"
                android:textSize="@dimen/txt45sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xueya_data_diya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/txt45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/heart" />

            <TextView
                android:id="@+id/xueya_data_maibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="@dimen/txt40sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/xueya_data_restart"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_green"
        android:text="@string/xueya_data_fragment_remeasure"
        android:textColor="#fff"
        android:textSize="@dimen/txt20sp" />

    <RelativeLayout
        android:id="@+id/xunyi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuan"
        android:visibility="gone" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/doctor" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/xueya_data_view"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/doctor_logo" />

        <RelativeLayout
            android:id="@+id/xueya_data_rl2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/duihuakuang"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/xueya_data_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:maxEms="15"
                android:maxLines="3"
                android:textColor="#fff"
                android:textSize="@dimen/txt18sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>